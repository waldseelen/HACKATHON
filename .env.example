# ===========================
# LogSense AI v2 - Environment Variables
# ===========================
# Copy this file as .env and fill in the values.

# AI Provider: "perplexity" or "openrouter"
AI_PROVIDER=perplexity

# Perplexity AI (Primary) – REQUIRED for AI analysis
PERPLEXITY_API_KEY=your-perplexity-api-key-here
PERPLEXITY_MODEL=sonar

# OpenRouter API (Fallback)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=deepseek/deepseek-r1-0528:free

# SQLite – local database path (inside container)
SQLITE_DB_PATH=/app/data/logsense.db

# CORS – comma-separated origins allowed to access the API
# Use "*" only for development, restrict in production!
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Host machine IP – used for QR codes (auto-detected if empty)
HOST_IP=

# Logging – DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Docker watcher – set to "false" when running outside Docker
ENABLE_DOCKER_WATCHER=true

# Processing – AI batch analysis settings
BATCH_WINDOW_SECONDS=30
MAX_BATCH_SIZE=3

# Frontend – Backend API URL for browser/SSR
# In Docker Compose, frontend connects to backend:8000 internally
# For local dev outside Docker, use http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
